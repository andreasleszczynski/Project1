    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="TextViewStyleLarge">
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textSize">@dimen/activity_textsize_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextViewStyleMedium">
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textSize">@dimen/activity_textsize_medium</item>

    </style>

    <style name="TextViewStyleSmall">
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textSize">@dimen/activity_textsize_small</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textSize">@dimen/activity_textsize_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/light_blue</item>
    </style>

</resources>
